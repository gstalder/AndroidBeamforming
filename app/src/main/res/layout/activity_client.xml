<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/discPeers"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Discover Peers"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="138dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_marginTop="38dp"
                android:text="Available Peers"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/peers_listview"
                android:layout_width="265dp"
                android:layout_height="347dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"></ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/connectedTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="CONNEDTED TO: " />

            <Button
                android:id="@+id/startTransmitting"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Start Transmitting"
                />

        </LinearLayout>



    </ViewFlipper>


</LinearLayout>
